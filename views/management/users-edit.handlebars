{{> header}}

<h1>Users</h1>

<h2>Edit User {{this.dataValues.id}}</h2>
<form data-id="{{this.dataValues.id}}" class="update-form">

  <div class="form-group">
    <label for="firstName">First Name:</label>
    <input type="text" class="update-firstName" id="update-firstName" name="firstName"
      value="{{this.dataValues.firstName}}">
    <label for="lastName">Last Name:</label>
    <input type="text" class="update-lastName" id="update-lastName" name="lastName"
      value="{{this.dataValues.lastName}}">
    <label for="userName">User Name:</label>
    <input type="text" class="update-userName" id="update-userName" name="userName"
      value="{{this.dataValues.userName}}">
    <label for="email">Email:</label>
    <input type="text" class="update-email" id="update-email" name="email" value="{{this.dataValues.email}}">
    <label for="phone">Phone:</label>
    <input type="text" class="update-phone" id="update-phone" name="phone" value="{{this.dataValues.phone}}">
    <label for="address">Address:</label>
    <input type="text" class="update-address" id="update-address" name="address" value="{{this.dataValues.address}}">
  </div>

  <button type="submit">Update User</button>
</form>

{{> footer}}
<!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<!-- App scripts -->
<script src="/js/users.js"></script>