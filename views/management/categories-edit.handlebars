<div class="wrapper">
  {{> header}}
  <main class="main">
    <div class="uk-container">
      {{> navigation/primary-nav}}
      <div class="uk-grid">
        <div class="uk-width-4-5">
          <h2>Edit {{this.dataValues.name}} name</h2>
          <form data-id="{{this.dataValues.id}}" class="update-form">
            <div class="form-group">
              <label for="category-name">Name:</label>
              <input type="text" class="category-name" id="category-name" name="name" value="{{this.dataValues.name}}">
            </div>
            <button type="submit">Update Category</button>
        </div>
        <div class="uk-width-1-5">
          {{> chat}}
        </div>
      </div>
    </div>
  </main>
  {{> footer}}
</div>
</form>
<!-- App scripts and css-->
<script src="/js/categories.js"></script>