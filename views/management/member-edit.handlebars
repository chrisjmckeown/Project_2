<h2>Edit Your Details</h2>
<form data-id="{{this.dataValues.id}}" class="update-member-form">

  <div class="form-group">
    <label for="first-name">First Name:</label>
    <input type="text" class="update-first-name" id="update-first-name" name="first-name"
      value="{{this.dataValues.firstName}}">
    <label for="last-name">Last Name:</label>
    <input type="text" class="update-last-name" id="update-last-name" name="last-name"
      value="{{this.dataValues.lastName}}">
    <label for="user-name">User Name:</label>
    <input type="text" class="update-user-name" id="update-user-name" name="user-name"
      value="{{this.dataValues.userName}}">
    <label for="email">Email:</label>
    <input type="email" class="update-email" id="update-email" name="email" value="{{this.dataValues.email}}">
    <label for="phone">Phone:</label>
    <input type="text" class="update-phone" id="update-phone" name="phone" value="{{this.dataValues.phone}}">
    <label for="address">Address:</label>
    <input type="text" class="update-address" id="update-address" name="address" value="{{this.dataValues.address}}">
    {{!-- <label for="password">Password:</label> --}}
    <input type="checkbox" id="change-password" name="change-password">
    <label for="change-password"> change password</label><br>
    <input type="password" class="update-password" id="update-password" name="password"
      value="">
  </div>

  <button type="submit">Update</button>
</form>

<!-- App scripts and css-->
<script src="/js/users.js"></script>